<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ichuk.coffee.activity.mine.FeedbackActivity">

    <include layout="@layout/layout_activity_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/md_white_1000"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="满意程度" />


        <RatingBar
            android:id="@+id/rb_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:numStars="5"
            android:stepSize="1.0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="反馈类型"
            android:textColor="@color/md_grey_800"
            android:background="@color/md_white_1000"/>

        <GridView
            android:id="@+id/gv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_white_1000"
            android:layout_marginLeft="10dp"
            android:numColumns="5"
            android:layout_marginRight="10dp"></GridView>

        <EditText
            android:id="@+id/et_suggest"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@color/md_white_1000"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:hint="说说您的建议（请不要少于五个字）"
            android:gravity="left"/>

        <ImageView
            android:id="@+id/iv_upload_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="20dp"/>

    </LinearLayout>

</LinearLayout>
